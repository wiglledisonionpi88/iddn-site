{
  "apps": [
    {
      "name": "azr-trading-bot",
      "script": "azr_trading_bot.py",
      "interpreter": "python3",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/azr-bot-error.log",
      "out_file": "./logs/azr-bot-out.log",
      "log_file": "./logs/azr-bot-combined.log",
      "time": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "merge_logs": true,
      "restart_delay": 5000,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}
